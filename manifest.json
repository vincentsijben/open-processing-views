{
  "manifest_version": 3,
  "name": "OpenProcessing Views Scraper",
  "version": "1.0.0",
  "description": "Manually scrape sketch views from the currently open OpenProcessing page.",
  "permissions": ["activeTab", "scripting", "downloads", "storage"],
  "host_permissions": ["https://openprocessing.org/*"],
  "options_page": "options.html",
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "action": {
    "default_title": "OpenProcessing Views Scraper",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png"
    },
    "default_popup": "popup.html"
  }
}
